						<c:if test="${not empty error}">
							<p style="color: red;">${error}</p>
						</c:if>

						<c:if test="${param.success eq 'registered'}">
							<p style="color: green;">Đăng ký thành công! Vui lòng đăng
								nhập.</p>
						</c:if>
<c:if test="${not empty message}">
    <p style="color: green;">${message}</p>
</c:if>


