	<!-- Popup nhập email -->
<div id="forgotPasswordModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h4>Khôi phục mật khẩu</h4>
        <p>Nhập email để nhận mật khẩu mới:</p>
        <form id="forgotPasswordForm" action="account" method="post">
            <input type="hidden" name="action" value="forgotPassword">
            <input type="email" name="email" placeholder="Nhập email của bạn" required class="form-control">
            <button type="submit" class="button button-reset">Gửi</button>
        </form>
        <p id="message" style="margin-top: 10px; font-weight: bold;"></p>
    </div>
</div>



	<script>
	// Thêm đoạn mã này vào phần <script> của bạn
	document.getElementById("forgotPasswordLink").addEventListener("click", function() {
	    document.getElementById("forgotPasswordModal").style.display = "block";
	});

	document.querySelector(".close").addEventListener("click", function() {
	    document.getElementById("forgotPasswordModal").style.display = "none";
	});

	// Đoạn mã xử lý form submit vẫn giữ nguyên
	document.getElementById("forgotPasswordForm").addEventListener("submit", function(event) {
	    event.preventDefault();
	    var formData = new FormData(this);
	    var message = document.getElementById("message");
	    
	    fetch("account", {
	        method: "POST",
	        body: formData
	    }).then(response => response.text()).then(data => {
	        console.log("Phản hồi từ server:", data); // Debug

	        var message = document.getElementById("message");
	        if (data.trim() === "success") { // Sử dụng trim() để loại bỏ khoảng trắng
	            message.style.color = "green";
	            message.innerText = "Mật khẩu đã được gửi qua email của bạn.";
	        } else if (data.trim() === "email-not-found") {
	            message.style.color = "red";
	            message.innerText = "Email không tồn tại trong hệ thống.";
	        } else if (data.trim() === "update-error") {
	            message.style.color = "red";
	            message.innerText = "Không thể cập nhật mật khẩu. Vui lòng thử lại.";
	        } else if (data.trim() === "email-error") {
	            message.style.color = "red";
	            message.innerText = "Gửi email thất bại! Vui lòng thử lại sau.";
	        } else {
	            message.style.color = "red";
	            message.innerText = "Đã xảy ra lỗi. Vui lòng thử lại!";
	        }
	    }).catch(error => {
	        console.error("Lỗi kết nối:", error);
	        message.style.color = "red";
	        message.innerText = "Đã xảy ra lỗi kết nối. Vui lòng thử lại!";
	    });

	});
</script>
	<script src="assets/vendors/jquery/jquery-3.2.1.min.js"></script>
